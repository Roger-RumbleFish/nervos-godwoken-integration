{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "target": "ESNext",
    "outDir": "lib",
    "rootDir": "src",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}