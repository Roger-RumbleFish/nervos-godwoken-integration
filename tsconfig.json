{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true, // remove after @polyjuice-provider/web3 lib will be fixed
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "target": "ES2019",
    "outDir": "lib",
    "rootDir": "src",
    "types": [
      "jest"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
  ]
}